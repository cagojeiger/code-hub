FROM python:3.13-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Copy dependency files
COPY pyproject.toml ./
RUN uv sync --frozen --extra dev --no-install-project || uv sync --extra dev --no-install-project

# Copy source code (both codehub and codehub_agent)
COPY codehub ./codehub
COPY codehub_agent ./codehub_agent

# Copy tests
COPY tests ./tests

# Install project with dev dependencies
RUN uv sync --frozen --extra dev || uv sync --extra dev

# Run tests
CMD ["uv", "run", "pytest", "tests", "-v"]
